{
    "name": "Screen Configuration",
    "xcustom_ui": "config.html",
    "optional": [
        ".*.js$",
        ".*.html$",
        "^example-.*",
        "^doc-.*",
        "package-header.jpg",
        ".*.md$"
    ],
    "options": [{
        "title": "Content Area Width (pixel)",
        "hint": "Height of your content. If it doesn't fix, it's resized to this width.",
        "ui_width": 4,
        "name": "width",
        "type": "float",
        "default": 1920
    }, {
        "title": "Content Area Height (pixel)",
        "hint": "Height of your content. If it doesn't fix, it's resized to this height.",
        "ui_width": 4,
        "name": "height",
        "type": "float",
        "default": 1080
    }, {
        "title": "Aspect adjust content",
        "hint": "Usually your playlist content is resized into the content area size, ignoring aspect ratio. Enable to use aspect ratio preserving scaling",
        "ui_width": 4,
        "name": "adjust",
        "type": "boolean",
        "default": false
    }, {
        "title": "Effect",
        "ui_width": 4,
        "name": "effect",
        "type": "select",
        "options": [
            ["none", "No effect (default)"],
            ["fade_02", "Fade 0.2s"],
            ["fade_05", "Fade 0.5s"]
        ],
        "default": "none"
    },
    
    {
        "title": "Screen Configuration",
        "type": "section"
    }, {
        "title": "Screens",
        "name": "screens",
        "type": "list",
        "itemname": "Screen",
        "items": [{
            "title": "Device",
            "ui_width": 6,
            "name": "serial",
            "type": "device"
        }, {
            "title": "Rotation",
            "ui_width": 3,
            "name": "rotation",
            "type": "select",
            "options": [
                [0, "None (default)"]
            ],
            "default": 0
        }, {
            "title": "Î” Latency (ms)",
            "ui_width": 3,
            "name": "delta_t",
            "type": "integer",
            "default": 0
        },
        
        {
            "title": "X",
            "ui_width": 3,
            "name": "x",
            "type": "float",
            "default": 0
        }, {
            "title": "Y",
            "ui_width": 3,
            "name": "y",
            "type": "float",
            "default": 0
        }, {
            "title": "Width",
            "ui_width": 3,
            "name": "width",
            "type": "integer",
            "default": 1920
        }, {
            "title": "Height",
            "ui_width": 3,
            "name": "height",
            "type": "integer",
            "default": 1080 
        }]
    }],
    "presets": {
        "2x2on16by9": {
            "desc": "Example 2x2 video wall using 16:9 screens",
            "config": {
                "width": 1920,
                "height": 1080,
                "adjust": true,
                "screens": [{
                    "x": 0, "y": 0, "width": 960, "height": 540
                }, {
                    "x": 960, "y": 0, "width": 960, "height": 540
                }, {
                    "x": 0, "y": 540, "width": 960, "height": 540
                }, {
                    "x": 960, "y": 540, "width": 960, "height": 540
                }]
            }
        },
        "mirror": {
            "desc": "Show the same content on two screens",
            "config": {
                "width": 1920,
                "height": 1080,
                "adjust": true,
                "screens": [{
                    "x": 0, "y": 0, "width": 1920, "height": 1080
                }, {
                    "x": 0, "y": 0, "width": 1920, "height": 1080
                }]
            }
        }
    }
}
