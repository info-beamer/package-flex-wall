{
    "name": "Screen Configuration",
    "xcustom_ui": "config.html",
    "optional": [
        ".*.js$",
        ".*.html$",
        "^example-.*",
        "^doc-.*",
        "package-header.jpg",
        ".*.md$"
    ],
    "options": [{
