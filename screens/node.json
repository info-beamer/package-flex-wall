{
    "name": "Screen Configuration",
    "xcustom_ui": "config.html",
    "optional": [
        ".*.js$",
        ".*.html$",
        "^example-.*",
        "^doc-.*",
        "package-header.jpg",
        ".*.md$"
    ],
    "options": [{
        "title": "Virtual Content Area",
        "type": "section"
    }, {
        "title": "Content Area Width",
        "hint": "Height of your content presentation area. You might use cm/inches here.",
        "ui_width": 4,
        "name": "width",
        "type": "float",
        "default": 1920
    }, {
        "title": "Content Area Height",
        "hint": "Height of your content presentation area. You might use cm/inches here.",
        "ui_width": 4,
        "name": "height",
        "type": "float",
        "default": 1080
    }, {
        "title": "Enforce aspect ratio",
        "hint": "Usually your playlist content is resized into the content area size, ignoring aspect ratio. Enable this option to scale your content into the specified area while preserving its aspect ratio.",
        "ui_width": 4,
        "info": "Use content aspect ratio",
        "name": "adjust",
        "type": "boolean",
        "default": false
    }, {
        "title": "Status Text",
        "hint": "Display of debug information",
        "ui_width": 3,
        "name": "status_text",
        "type": "select",
        "options": [
            ["top_left", "Top Left (default)"],
            ["top_right", "Top Right"],
            ["bottom_left", "Bottom Left"],
            ["bottom_right", "Bottom Right"],
            ["off", "Disabled"]
        ],
        "default": "top_left"
    },

    {
        "title": "Screen Configuration",
        "type": "section"
    }, {
        "title": "Screens",
        "name": "screens",
        "type": "list",
        "itemname": "Screen",
        "items": [{
            "title": "Device",
            "ui_width": 6,
            "name": "serial",
            "type": "device"
        }, {
            "title": "Rotation",
            "hint": "Physical screen rotation.",
            "ui_width": 3,
            "name": "rotation",
            "type": "select",
            "options": [
                [0, "None (default)"],
                [90, "90° (clockwise)"],
                [180, "180°"],
                [270, "270°"]
            ],
            "default": 0
        }, {
            "title": "Δ Latency (ms)",
            "ui_width": 3,
            "name": "delta_t",
            "type": "integer",
            "default": 0
        },

        {
            "title": "X",
            "hint": "Horizontal offset of the top-left corner inside the content area.",
            "ui_width": 3,
            "name": "x",
            "type": "float",
            "default": 0
        }, {
            "title": "Y",
            "hint": "Vertical offset of the top-left corner inside the content area.",
            "ui_width": 3,
            "name": "y",
            "type": "float",
            "default": 0
        }, {
            "title": "Width",
            "hint": "Horizontal size of this screen.",
            "ui_width": 3,
            "name": "width",
            "type": "float",
            "default": 1920
        }, {
            "title": "Height",
            "hint": "Vertical size of this screen.",
            "ui_width": 3,
            "name": "height",
            "type": "float",
            "default": 1080
        }]
    }],
    "presets": {
        "2x2on16by9": {
            "desc": "Example 2x2 video wall using 16:9 screens",
            "config": {
                "width": 1920,
                "height": 1080,
                "adjust": true,
                "screens": [{
                    "x": 0, "y": 0, "width": 960, "height": 540
                }, {
                    "x": 960, "y": 0, "width": 960, "height": 540
                }, {
                    "x": 0, "y": 540, "width": 960, "height": 540
                }, {
                    "x": 960, "y": 540, "width": 960, "height": 540
                }]
            }
        },
        "mirror": {
            "desc": "Show the same content on two screens",
            "config": {
                "width": 1920,
                "height": 1080,
                "adjust": true,
                "screens": [{
                    "x": 0, "y": 0, "width": 1920, "height": 1080
                }, {
                    "x": 0, "y": 0, "width": 1920, "height": 1080
                }]
            }
        }
    }
}
