        {
            "title": "X",
            "ui_width": 3,
            "name": "x",
            "type": "float",
            "default": 0
        }, {
            "title": "Y",
            "ui_width": 3,
            "name": "y",
            "type": "float",
            "default": 0
        }, {
            "title": "Width",
            "ui_width": 3,
            "name": "width",
            "type": "integer",
            "default": 1920
        }, {
            "title": "Height",
            "ui_width": 3,
            "name": "height",
            "type": "integer",
            "default": 1080 
